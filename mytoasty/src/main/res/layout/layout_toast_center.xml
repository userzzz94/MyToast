<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="@dimen/dp_x350"
        android:layout_height="@dimen/dp_x250"
        android:layout_gravity="center"
        android:background="@drawable/shape_toast"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/dp_x5">

        <ImageView
            android:id="@+id/toast_image"
            android:layout_width="@dimen/dp_x120"
            android:layout_height="@dimen/dp_x120"
            android:layout_gravity="center"
            android:layout_margin="@dimen/dp_x5" />

        <TextView
            android:id="@+id/toast_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_x10"
            android:textSize="18sp"
            android:textStyle="bold"/>
    </LinearLayout>
</LinearLayout>
